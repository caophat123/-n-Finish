@model IEnumerable<DoAnPC.Models.Products>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<div style="background-color: antiquewhite;">

    <div>
        <h3 style="text-align:center; font-weight:500;">Welcome To Website</h3>
    </div>
    <section class="wrapper">

        <div class="products">
            <div class="row">
                @foreach (var pro in Model)
                {
                    <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">

                        <li class="main-product">


                            <img class="img-prd" src="~/Images/@pro.ImagePro" width="350" height="300" />
                            <h6 class="content-product-h3">
                                <p style="text-align:center;"> @Html.DisplayFor(model => pro.NamePro)</p>
                            </h6>
                            <div class="content-product">

                                <div class="content-product-deltals">
                                    <p class="price"><strong>Giá: </strong><font style="margin-right:10px;" color="red">@Html.DisplayFor(model => pro.Price)</font></p>
                                    <p style="text-align: center;">

                                        <a class="btn btn-cart" href="@Url.Action("AddToCart", "Cart", new {id = pro.ProductID } )">
                                        Thêm vào giỏ </a>
                                    </p>

                                </div>
                            </div>
                        </li>

                    </div>
                }
            </div>
        </div>

    </section>

</div>